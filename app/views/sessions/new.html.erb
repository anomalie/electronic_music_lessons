<div class="container">
  <div class="row"></div>
  <div class="row"></div>
  <div class="row"></div>
  <div class="row"></div>
  <div class="row">
      <%= form_tag('/login', method: :post) do %>  
        <div class="row">
          <div class="input-field col s12">
            <i class="mdi-communication-email prefix"></i>
            <%= text_field_tag :email, nil, class: "validate" %>
            <label for="email">Email</label>
          </div>
        </div>   
        <div class="row">
          <div class="input-field col s12">
            <i class="mdi-action-https prefix"></i>
            <%= password_field_tag :password, nil, class: "validate" %>
            <label for="password">Password</label>
          </div>
        </div>

          <%= submit_tag "Log In!", class: "btn-large blue" %> 
        
      <% end %>
    </div>
    <div class="row"></div>
    <div class="row"></div> 
    <div class="row"></div>
</div>